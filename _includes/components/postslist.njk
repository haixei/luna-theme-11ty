<div class="card-grid">
  {% for post in posts %}
    <div class="card">
      {% if post.data.seriesName %}
        <span class="series {{ post.data.seriesName }}">{{ post.data.seriesName | fullSeriesName }}</span>
      {% endif %}
      {% if post.data.coverIMG %}
        <img src="{{ post.data.coverIMG }}" class="card__cover">
      {% endif %}
      <a class="card__title" href="{{ post.url | url }}">{{ post.data.title }}</a>
      <p class="card__description">{{ post.data.description }}</p>
      <div class="card-info-group">
        <p class="card__date">{{ post.date | readableDate }}</p>
        <div class="line"></div>
        <div class="tags">
          {% for tag in post.data.tags %}
            {% if tag != 'post' %}
              <a href="{{ '/tags/' | url }}{{ tag | slug }}">{{ tag }}</a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
